    <script>
        // 自動調整圖片顯示尺寸
        function adjustImageSize(img) {
            const width = img.naturalWidth;
            const height = img.naturalHeight;
            const ratio = width / height;
            
            // 移除所有方向類別
            img.classList.remove('landscape', 'portrait', 'square');
            
            if (ratio > 1.3) {
                // 橫式 (台灣標準名片比例約 1.67)
                img.classList.add('landscape');
            } else if (ratio < 0.77) {
                // 直式 (台灣標準名片比例約 0.6)
                img.classList.add('portrait');
            } else {
                // 接近正方形或其他比例
                img.classList.add('square');
            }
        }

        // 從 URL 參數獲取預填資料和設定
        function getUrlParams() {
            const urlParams = new URLSearchParams(window.location.search);
            const params = {};
            for (const [key, value] of urlParams) {
                params[key] = value;
            }
            return params;
        }

        // 預填表單資料
        function prefillForm() {
            const params = getUrlParams();
            
            // 預填各個欄位
            const fieldMappings = {
                'name': 'name',
                'englishName': 'englishName', 
                'company': 'company',
                'position': 'position',
                'email': 'email',
                'phone': 'phone',
                'mobile': 'mobile',
                'fax': 'fax',
                'address': 'address',
                'website': 'website',
                'taxNumber': 'taxNumber',
                'lineId': 'lineId',
                'lineUserId': 'lineUserId'
            };

            Object.entries(fieldMappings).forEach(([param, fieldId]) => {
                if (params[param]) {
                    const field = document.getElementById(fieldId);
                    if (field) {
                        field.value = decodeURIComponent(params[param]);
                    }
                }
            });

            // 處理名片預覽圖片
            if (params.cardImage) {
                const cardPreview = document.getElementById('cardPreview');
                const previewImage = document.getElementById('previewImage');
                previewImage.src = decodeURIComponent(params.cardImage);
                cardPreview.classList.add('show');
            }
        }

        // 檔案上傳處理
        document.getElementById('businessCard').addEventListener('change', function(e) {
            const fileText = document.getElementById('fileText');
            if (e.target.files.length > 0) {
                fileText.textContent = `已選擇: ${e.target.files[0].name}`;
            } else {
                fileText.textContent = '點擊選擇檔案或拖拽到此處';
            }
        });

        // 表單送出處理
        document.getElementById('businessForm').addEventListener('submit', async function(e) {
            e.preventDefault();

            const params = getUrlParams();
            const webhookUrl = params.webhook;

            if (!webhookUrl) {
                document.getElementById('errorMessage').textContent = '未設定 Webhook URL';
                document.getElementById('errorMessage').style.display = 'block';
                return;
            }

            // 收集表單資料
            const formData = new FormData();
            const form = e.target;

            // 添加所有表單欄位到 FormData
            Array.from(form.elements).forEach(element => {
                if (element.name && element.type !== 'submit') {
                    if (element.type === 'file' && element.files.length > 0) {
                        formData.append(element.name, element.files[0]);
                    } else if (element.type !== 'file') {
                        formData.append(element.name, element.value);
                    }
                }
            });

            // 添加時間戳記
            formData.append('timestamp', new Date().toISOString());

            try {
                const response = await fetch(decodeURIComponent(webhookUrl), {
                    method: 'POST',
                    body: formData
                });

                if (response.ok) {
                    document.getElementById('successMessage').style.display = 'block';
                    document.getElementById('errorMessage').style.display = 'none';
                    form.reset();
                    document.getElementById('fileText').textContent = '點擊選擇檔案或拖拽到此處';
                } else {
                    throw new Error('網路錯誤');
                }
            } catch (error) {
                document.getElementById('errorMessage').style.display = 'block';
                document.getElementById('successMessage').style.display = 'none';
                console.error('送出表單錯誤:', error);
            }
        });

        // 頁面載入時執行預填
        document.addEventListener('DOMContentLoaded', prefillForm);

        // 拖拽上傳功能
        const fileInput = document.querySelector('.file-input');
        
        fileInput.addEventListener('dragover', function(e) {
            e.preventDefault();
            this.style.borderColor = '#8b6949';
            this.style.backgroundColor = 'rgba(255, 255, 255, 1)';
        });

        fileInput.addEventListener('dragleave', function(e) {
            e.preventDefault();
            this.style.borderColor = '#d2b48c';
            this.style.backgroundColor = 'rgba(255, 255, 255, 0.9)';
        });

        fileInput.addEventListener('drop', function(e) {
            e.preventDefault();
            this.style.borderColor = '#d2b48c';
            this.style.backgroundColor = 'rgba(255, 255, 255, 0.9)';
            
            const files = e.dataTransfer.files;
            if (files.length > 0) {
                document.getElementById('businessCard').files = files;
                document.getElementById('fileText').textContent = `已選擇: ${files[0].name}`;
            }
        });
    </script>
</body>
</html>
